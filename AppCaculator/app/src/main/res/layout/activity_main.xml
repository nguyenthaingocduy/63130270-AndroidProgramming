<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1DBDD"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonTru"
        android:layout_width="63dp"
        android:layout_height="52dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="44dp"
        android:text="-"
        app:layout_constraintStart_toEndOf="@+id/buttonCong"
        app:layout_constraintTop_toBottomOf="@+id/edtTextB" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PHEP TINH SO HOC"
        android:textColor="#039BE5"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="36dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="28dp"
        android:text="a="
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/edtTextA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="104dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="48dp"
        android:text="b="
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtTextA" />

    <EditText
        android:id="@+id/edtTextB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="108dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtTextA" />

    <Button
        android:id="@+id/buttonCong"
        android:layout_width="54dp"
        android:layout_height="52dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="52dp"
        android:text="+"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtTextB" />

    <Button
        android:id="@+id/buttonNhan"
        android:layout_width="68dp"
        android:layout_height="53dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="44dp"
        android:text="*"
        app:layout_constraintStart_toEndOf="@+id/buttonTru"
        app:layout_constraintTop_toBottomOf="@+id/edtTextB" />

    <Button
        android:id="@+id/buttonChia"
        android:layout_width="67dp"
        android:layout_height="49dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="48dp"
        android:text="/"
        app:layout_constraintStart_toEndOf="@+id/buttonNhan"
        app:layout_constraintTop_toBottomOf="@+id/edtTextB" />

    <TextView
        android:id="@+id/textViewKetQua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:width="500dp"
        android:background="#AB8E24AA"
        android:text="Ket Qua:"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/buttonNhan"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>